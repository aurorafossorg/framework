root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
tab_width = 2

[*.json]
insert_final_newline = false

[package-lock.json]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{js,py}]
charset = utf-8

[*.{c,cpp,d}]
# C-style doc comments
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.d]
dfmt_brace_style = otbs
dfmt_soft_max_line_length = 120
dfmt_align_switch_statements = true
dfmt_outdent_attributes = true
dfmt_split_operator_at_line_end = false
dfmt_space_after_cast = false
dfmt_space_after_keywords = false
dfmt_selective_import_space = true
dfmt_compact_labeled_statements = true
